<style>
    .active {
        color: white;
        background: black;
    }

    .image {
        height: 250px;
        -webkit-background-size: cover;
        background-size: cover;
        background-position: center;
    }
</style>
{% for post in posts %}
    <div class="post">
        <div class="name"><h3>{{ post.name }}</h3></div>
        <div class="image" style="background-image: url('{{ post.image }}')"></div>
        <div class="content">{{ post.content|striptags|slice(0, 120)|raw }}<a
                    href="/posts/view?id={{ post.id }}">...</a></div>
    </div>
{% endfor %}

{% if (pc>1) %}
    {% for i in range(1,pc) %}
        <a href="{{ urlbase }}&page={{ i }}"
                {% if page == i %} class="active" {% endif %}
        >{{ i }}</a>&nbsp;
    {% endfor %}
{% endif %}